{
  "name": "gerador-aulas-cientificas",
  "version": "1.0.0",
  "description": "Aplicativo para geração de aulas científicas a partir de PDFs com IA integrada",
  "main": "index.html",
  "scripts": {
    "build": "echo 'Build completed - PWA ready'",
    "serve": "npx http-server . -p 8080",
    "cap:init": "npx cap init",
    "cap:add:android": "npx cap add android",
    "cap:sync": "npx cap sync",
    "cap:open:android": "npx cap open android",
    "cap:build:android": "npx cap build android",
    "android:dev": "npm run build && npx cap sync && npx cap open android",
    "android:build": "npm run build && npx cap sync && npx cap build android",
    "icons:generate": "node generate-icons.js"
  },
  "keywords": [
    "scientific",
    "education",
    "biochemistry",
    "pdf",
    "ai",
    "lectures",
    "android",
    "pwa"
  ],
  "author": "Gustavo Milani",
  "license": "MIT",
  "dependencies": {
    "@capacitor/core": "^5.5.1",
    "@capacitor/cli": "^5.5.1",
    "@capacitor/android": "^5.5.1",
    "@capacitor/filesystem": "^5.1.4",
    "@capacitor/share": "^5.0.6",
    "@capacitor/splash-screen": "^5.0.6",
    "@capacitor/status-bar": "^5.0.6",
    "@capacitor/haptics": "^5.0.6",
    "@capacitor/device": "^5.0.6",
    "@capacitor/network": "^5.0.6",
    "@capacitor/app": "^5.0.6"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "sharp": "^0.32.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gugamilani940/gerador-aulas-app.git"
  },
  "bugs": {
    "url": "https://github.com/gugamilani940/gerador-aulas-app/issues"
  },
  "homepage": "https://github.com/gugamilani940/gerador-aulas-app#readme"
}
